{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/halfdb/api_generator/main/schema/api_doc.json",

  "type":"object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "chapters": {
      "type": "array",
      "items": { "$ref": "chapter.json" }
    }
  },
  "required": [
    "title",
    "description"
  ]
}